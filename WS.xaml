<Window x:Class="MyApp.WorkingSpaceW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp" 
        mc:Ignorable="d"
        Height="500" Width="950"
        MinHeight="350" MinWidth="600"
        Title="APP MARKET"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" SelectionMode="Single" SelectionChanged="sidebar_SelectionChanged" x:Name="sidebar" BorderThickness="0">
            <local:NavButton Navlink="/View/Home.xaml" Margin="0,10,0,5"  Icon="/Images/Home.png" />
            <local:NavButton Navlink="/View/Home.xaml" Margin="0,5,0,5"  Icon="/Images/Search.png"/>
            <local:NavButton Navlink="/View/Home.xaml" Margin="0,5,0,5"  Icon="/Images/BookMark.png"/>
            <local:NavButton Navlink="/View/UserP.xaml" Margin="0,5,0,5"  Icon="/Images/Message.png"/>
            <local:NavButton Navlink="/View/UserP.xaml" Margin="0,5,0,5"  Icon="/Images/UPD240.png" />
        </ListBox>

        <Frame Grid.Column="1" x:Name="frame" NavigationUIVisibility="Hidden" Background="#e9ecef"/>

    </Grid>
</Window>
