<Page x:Class="MyApp.View.AddAppPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyApp.View"
      xmlns:MyApp="clr-namespace:MyApp" 
      xmlns:viewmodel="clr-namespace:MyApp.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:AddAppPageViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAppP">

    <Grid Background="#f1f3f5">
        <Grid.RowDefinitions>
            <RowDefinition Height =" 100"/>
            <RowDefinition Height ="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Add App" FontFamily="ubuntu" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFB197FC" FontSize="60" FontWeight="Bold"/>
        <Grid Grid.Row="1" Background="Azure">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">

                <Label Content="Назва"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="26"/>
                <Label Content="Компанія" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Label Content="Опис" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Label Content="Фото" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBox Style="{StaticResource MyTextBox}" Margin="0,10,0,0"  HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <TextBox HorizontalAlignment="Left" Margin="0,10,0,0"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                <TextBox HorizontalAlignment="Left" Margin="0,10,0,0"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                <Button Content="Button" Margin="0,10,0,0" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="120" Click="UploadPhoto"/>
                <Button Content="Button" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="58" Width="278" Click="UploadToDB" Margin="0,30,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
