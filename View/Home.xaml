<Page x:Class="MyApp.View.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyApp.View"
      xmlns:n="clr-namespace:MyApp"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="780"
      Title="Home">
    
    <Grid Background="#f1f3f5">
        <Grid.RowDefinitions >
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="APP MARKET" FontFamily="ubuntu" HorizontalAlignment="Center" Foreground="#FFB197FC" FontSize="60" FontWeight="Bold" Height="72" Width="378" Grid.Column="1"/>
        <Viewbox Grid.Row="1" HorizontalAlignment="Left">
            <ListBox x:Name="appList" SelectionChanged="appList_SelectionChanged" ItemsSource="{Binding Apps}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5" Style="{StaticResource StackP}">
                        <Image Width="100" Height="75" Source="{Binding Path=ImagePath}" />
                        <TextBlock FontSize="16" Text="{Binding Path=Name}" HorizontalAlignment="Center" />
                        <TextBlock FontSize="16" Text="{Binding Path=Company}" HorizontalAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        </Viewbox>
        
    </Grid>
</Page>

