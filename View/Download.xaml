<Page x:Class="MyApp.View.AddApp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyApp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddApp">

    <Grid Background="#f1f3f5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <Viewbox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" >
            <StackPanel>
            <Button Height="25" Width="120" Content="⬇️⬇️⬇⬇" Click="Button_Click"></Button>
             <TextBlock Text="Download File" FontSize="25" Padding="2"></TextBlock>
                <Label x:Name="loadbox" FontSize="12" HorizontalAlignment="Center" Width="150" ></Label>
                <ProgressBar x:Name="PrBar" Height="20"></ProgressBar>
                
            </StackPanel>
        </Viewbox>
        
        
        
    </Grid>
</Page>
